<% if users.any? %>

  <ul class="media-list">
    <% users.each do |user| %>

      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src=" <%= gravatar_url(user, { size: 50 }) %> " alt="">
        </div>
        <div class="media-body">
          <div>
            <%= ERB::Util.html_escape(user.name) %>
          </div>
          <div>
            <p> <%= link_to 'View profile', user_path(user) %> </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>