<h1>id = <%= @task.id %>のtask詳細ページ</h1>


<table class="table table-bordered">
  <tr>
    <th> id </th>
    <td> <%= ERB::Util.html_escape(@task.id) %> </td>
  </tr>
  <tr>
    <th> ステータス </th>
    <td> <%= ERB::Util.html_escape(@task.status) %> </td>
  </tr>
  <tr>
    <th> タスク </th>
    <td> <%= ERB::Util.html_escape(@task.content) %> </td>
  </tr>
</table>

<%= link_to 'このメッセージを編集する', edit_task_path(@task), class: 'btn btn-default' %>

<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
