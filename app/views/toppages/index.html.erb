<% if logged_in? %>

  <div class='row'>
    <aside class="col-md-4">
      
      <%= form_for(@task) do |t| %>
      
        <% if @task.errors.any? %>
          <div class="alert alert-warning">
    
            <ul>
              <% @task.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
              <% end %>
            </ul>
    
          </div>
      <% end %>
        <li> タスクを入力してください</li>
        <div class="form-group">
          <%= t.text_area :content, class: 'form-control', rows: 5 %>
        
        </div>
      
        <div class="form-group">
          <li> ステータスを入力してください(10文字以内)</li>
          <%= t.text_area :status, class: 'form-control', rows: 5 %>
        
        </div>
        <%= t.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      
    <%= render 'tasks/tasks', tasks: @tasks, user: @user %>

    </div>
  </div>

  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
    
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>